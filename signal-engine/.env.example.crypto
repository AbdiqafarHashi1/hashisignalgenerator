# CRYPTO template (copy to .env). First changes: RUN_MODE, SYMBOLS, STRATEGY_PROFILE.

# ===== CORE =====
MODE=paper
ENGINE_MODE=paper
RUN_MODE=live
# live -> MARKET_DATA_PROVIDER=bybit ; replay -> MARKET_DATA_PROVIDER=replay
PROFILE=profit
STRATEGY_PROFILE=CRYPTO_SCALP_25
ASSET_CLASS=crypto
SYMBOLS=ETHUSDT
DATA_DIR=data
DATABASE_URL=sqlite:///data/trades.db

# ===== MARKET DATA =====
MARKET_PROVIDER=bybit
MARKET_DATA_PROVIDER=bybit
MARKET_DATA_FALLBACKS=binance,okx,replay
MARKET_DATA_REPLAY_PATH=data/replay
CANDLE_INTERVAL=5m
CANDLE_HISTORY_LIMIT=1200
WARMUP_MIN_BARS_5M=300
WARMUP_MIN_BARS_1H=120
TICK_INTERVAL_SECONDS=30

# --- replay switch example ---
# RUN_MODE=replay
# MARKET_DATA_PROVIDER=replay
# REPLAY_START_TS=2024-06-01T00:00:00+00:00
# REPLAY_END_TS=2025-02-18T00:00:00+00:00

# ===== REPLAY CONTROLS =====
MARKET_DATA_REPLAY_SPEED=20
REPLAY_START_TS=
REPLAY_END_TS=
REPLAY_RESUME=false
REPLAY_MAX_TRADES=120
REPLAY_MAX_BARS=5000

# ===== RISK =====
ACCOUNT_SIZE=25000
PROP_ENABLED=false
PROP_GOVERNOR_ENABLED=false
BASE_RISK_PCT=0.0022
MAX_RISK_PCT=0.0025
MAX_DAILY_LOSS_PCT=0.014
PROP_MAX_TRADES_PER_DAY=25

# ===== PROVIDER KEYS =====
BYBIT_TESTNET=false
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_REST_BASE=https://api.bybit.com
# OANDA_* not used for crypto

# ===== DEBUG =====
DEBUG_LOOSEN=false
DEBUG_DISABLE_HARD_RISK_GATES=false
DEBUG_REPLAY_TRACE=false
DEBUG_REPLAY_TRACE_EVERY=250

# ===== OPTIONAL TELEGRAM =====
# TELEGRAM_ENABLED=true
# TELEGRAM_BOT_TOKEN=123456:token
# TELEGRAM_CHAT_ID=123456789
