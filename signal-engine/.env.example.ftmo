# FTMO/FOREX template (copy to .env). First changes: OANDA credentials, RUN_MODE.

# ===== CORE =====
MODE=paper
ENGINE_MODE=paper
RUN_MODE=live
# live -> MARKET_DATA_PROVIDER=oanda ; replay -> MARKET_DATA_PROVIDER=replay
PROFILE=profit
STRATEGY_PROFILE=FTMO_PASS_25
# FTMO_PASS_25 = conservative pass-style risk limits, fewer trades/day.
ASSET_CLASS=forex
SYMBOLS=EURUSD
# multiple symbols example: SYMBOLS=EURUSD,GBPUSD,USDJPY
DATA_DIR=data
DATABASE_URL=sqlite:///data/trades.db

# ===== MARKET DATA =====
MARKET_PROVIDER=oanda
MARKET_DATA_PROVIDER=oanda
MARKET_DATA_REPLAY_PATH=data/replay
CANDLE_INTERVAL=5m
CANDLE_HISTORY_LIMIT=1200
WARMUP_MIN_BARS_5M=300
WARMUP_MIN_BARS_1H=120
TICK_INTERVAL_SECONDS=60

# OANDA practice/live market-data feed (paper execution remains local simulation)
OANDA_ENV=practice
OANDA_API_TOKEN=
OANDA_ACCOUNT_ID=
# optional explicit instrument override (otherwise derived from SYMBOLS)
OANDA_INSTRUMENTS=EUR_USD

# --- replay switch example ---
# RUN_MODE=replay
# MARKET_DATA_PROVIDER=replay
# REPLAY_START_TS=2024-06-01T00:00:00+00:00
# REPLAY_END_TS=2025-02-18T00:00:00+00:00

# ===== REPLAY CONTROLS =====
MARKET_DATA_REPLAY_SPEED=20
REPLAY_START_TS=
REPLAY_END_TS=
REPLAY_RESUME=false
REPLAY_MAX_TRADES=120
REPLAY_MAX_BARS=5000

# ===== PROP / FTMO GUARDRAILS =====
ACCOUNT_SIZE=25000
PROP_ENABLED=true
PROP_GOVERNOR_ENABLED=true
PROP_MAX_DAILY_LOSS_PCT=0.04
PROP_MAX_GLOBAL_DD_PCT=0.08
PROP_DD_INCLUDES_UNREALIZED=true
PROP_RISK_BASE_PCT=0.0012
PROP_RISK_MIN_PCT=0.0007
PROP_RISK_MAX_PCT=0.0018
PROP_MAX_TRADES_PER_DAY=4
PROP_MAX_CONSEC_LOSSES=2
PROP_TIME_COOLDOWN_MINUTES=60

# ===== DEBUG =====
DEBUG_LOOSEN=false
DEBUG_DISABLE_HARD_RISK_GATES=false
DEBUG_REPLAY_TRACE=false
DEBUG_REPLAY_TRACE_EVERY=250

# ===== OPTIONAL TELEGRAM =====
# TELEGRAM_ENABLED=true
# TELEGRAM_BOT_TOKEN=123456:token
# TELEGRAM_CHAT_ID=123456789
