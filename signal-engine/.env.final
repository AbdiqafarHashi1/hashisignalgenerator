# Final canonical setup template (copy to .env)

# ===== CORE MODE =====
MODE=paper
ENGINE_MODE=paper
RUN_MODE=replay
PROFILE=profit
STRATEGY_PROFILE=PROP_PASS
RISK_MODE=SAFE_75
SETTINGS_ENABLE_LEGACY=false

# ===== ASSETS =====
# Default: crypto replay. Forex is toggle-ready below.
ASSET_CLASS=crypto
SYMBOLS=ETHUSDT
CANDLE_INTERVAL=5m

# ===== PROVIDERS =====
# replay (default)
MARKET_PROVIDER=bybit
MARKET_DATA_PROVIDER=replay
MARKET_DATA_REPLAY_PATH=data/replay
MARKET_DATA_FALLBACKS=binance,okx,replay

# live toggle-ready (switch RUN_MODE=live + MARKET_DATA_PROVIDER=bybit/oanda)
BYBIT_TESTNET=false
BYBIT_API_KEY=
BYBIT_API_SECRET=
OANDA_ENV=practice
OANDA_API_TOKEN=
OANDA_ACCOUNT_ID=

# ===== REPLAY SAFETY DEFAULTS =====
REPLAY_MAX_BARS=25000
REPLAY_MAX_TRADES=250
REPLAY_SPEED=50
REPLAY_RESUME=false
REPLAY_START_TS=
REPLAY_END_TS=

# ===== ACCOUNT / RISK =====
ACCOUNT_SIZE=25000
PROP_ENABLED=true
PROP_GOVERNOR_ENABLED=true
PROP_MAX_TRADES_PER_DAY=4
PROP_MAX_DAILY_LOSS_PCT=0.05
PROP_MAX_GLOBAL_DD_PCT=0.10

# Instant funded toggle-ready (activate with PROFILE=instant_funded / STRATEGY_PROFILE=INSTANT_FUNDED / RISK_MODE=FAST_25)
INSTANT_MONTHLY_TARGET_PCT=0.06
INSTANT_RISK_BASE_PCT=0.0015
INSTANT_RISK_MAX_PCT=0.0020
INSTANT_MAX_DAILY_DD_PCT=0.03
INSTANT_MAX_GLOBAL_DD_PCT=0.06
INSTANT_MAX_TRADES_PER_DAY=10
INSTANT_COOLDOWN_MINUTES=60
INSTANT_MIN_SIGNAL_SCORE=62

# Forex toggle (when data exists)
# ASSET_CLASS=forex
# SYMBOLS=EURUSD,GBPUSD
# MARKET_DATA_PROVIDER=replay
# OANDA_INSTRUMENTS=EUR_USD,GBP_USD

# ===== APP / STORAGE =====
DATA_DIR=data
DATABASE_URL=sqlite:///data/trades.db
INTERNAL_API_BASE_URL=http://api:8000
NEXT_PUBLIC_API_BASE=http://localhost:8000
